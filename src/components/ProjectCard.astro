---
import type { Project } from "../data/projects";
import '../styles/global.css';

interface Props {
  project: Project;
}
const { project } = Astro.props;
---

<div class="project-card">
  <img 
    src={project.imageUrl} 
    alt={project.title}
    class="project-image"
  />
  <div class="project-content">
    <h3>{project.title}</h3>
    <p>{project.description}</p>
  </div>
</div>