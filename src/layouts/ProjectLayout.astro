---
import Layout from "./Layout.astro";

const { title, shortDescription, imageUrl, techStack, githubUrl } = Astro.props;
---

<Layout title={title}>
  <article class="project">
    <header>
      <h1>{title}</h1>
      <p class="description">{shortDescription}</p>
      {imageUrl && <img src={imageUrl} alt={title} />}
    </header>
    
    <slot />
  </article>
</Layout>